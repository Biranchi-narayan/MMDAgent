# Querys
[InfoQuery]
	(what *[Linking] [SpecNode] *'s [Info])
;

[NodeQuery]
	(what [GenNode] [RelVerb] [SpecNode])
	(what [GenNode] [AllLinking] [SpecNode] [RelVerb] *[Prep])
;

[PersonQuery]
	(who *[Linking] [SpecPerson])
	(who *[Linking] [SpecPerson] *'s [Rel])
;

[LocationQuery]
	(where *[Linking] [SpecLocation])
	(where *[Linking] [SpecPerson] *'s [GenLocation])
	(where *[_do] [SpecPerson] [LocationVerb])
;

